@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
  @import GraphTip
.ig
  #map
    position absolute
    top 0px
    left 0px
    width 100%
    bottom 250px
    .leaflet-div-icon
      border 0px none
      border-radius 50%
      overflow hidden
      div
        position absolute
        top 0px
        left 0px
        width 100%
        bottom 0px
  #detail
    position absolute
    bottom 0px
    width 100%
    height 250px
    background #fa
    border-top 1px solid #e0
    z-index 2
    padding 10px
    overflow hidden
    h2
      font-size 16px
      font-weight bold
      color ColorRed
      margin 0px 0px 0px 0px
      float left
    p
      float left
      margin 1px 0px 0px 10px
      display none
      z-index 2
      position relative
      &.active
        display block
      a:hover
        text-decoration none
    canvas
      position absolute
      bottom 30px
      left 10px
      z-index 1
    #legend
      margin 0px
      position absolute
      bottom 30px
      right 10px
      height 200px
      width 190px
      li
        position absolute
        left 0px
        list-style-type none
        .color
          position absolute
          top 0px
          left 0px
          height 2px
          width 100%
    ul.x-axis
      position absolute
      left 0px
      bottom 20px
      list-style-type none
      font-size 10px
      line-height 9px
      li
        position absolute
        top 0px
        padding-top 4px
        padding-left 2px
        &:after
          content ""
          position absolute
          left 0px
          top 1px
          width 1px
          height 5px
          background #6
    #overlay
      position absolute
      top 0px
      left 0px
      width 100%
      bottom 0px
      background rgba(#fa, 0.90)
      padding 10px
      z-index 5
