@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  #map
    position absolute
    top 0px
    left 0px
    width 100%
    bottom 250px
  #detail
    position absolute
    bottom 0px
    width 100%
    height 250px
    background #fa
    border-top 1px solid #e0
    z-index 2
    padding 10px
    h2
      font-size 16px
      font-weight bold
      color ColorRed
      margin 0px 0px 0px 0px
      float left
    p
      float left
      margin 1px 0px 0px 10px
      display none
      &.active
        display block

